{
  "id": null,
  "title": "Fraud Detection API - Real-time Monitoring",
  "tags": ["fraud", "detection", "api", "real-time"],
  "timezone": "browser",
  "refresh": "15s",
  "time": {
    "from": "now-2h",
    "to": "now"
  },
  "panels": [
    {
      "id": 2,
      "title": "API Response Time",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(fraud_prediction_duration_seconds_bucket[5m])) * 1000",
          "legendFormat": "95th Percentile (ms)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          },
          "unit": "ms",
          "min": 0
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 3,
      "title": "Total Predictions",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(fraud_predictions_total)",
          "legendFormat": "Total Predictions"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 4,
      "title": "Model Version",
      "type": "stat",
      "targets": [
        {
          "expr": "fraud_model_version",
          "legendFormat": "Current Version"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "blue"
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 5,
      "title": "Fraud vs Normal Predictions (Real-time)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(fraud_predictions_total{result=\"fraud\"}[1m]) * 60",
          "legendFormat": "Fraud/min"
        },
        {
          "expr": "rate(fraud_predictions_total{result=\"normal\"}[1m]) * 60",
          "legendFormat": "Normal/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {
              "type": "linear"
            },
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "off"
            }
          },
          "mappings": [],
          "unit": "reqps",
          "min": 0
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Fraud/min"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          }
        ]
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      },
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 6,
      "title": "High Amount Transactions",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(fraud_high_amount_transactions_total[5m]) * 300",
          "legendFormat": "High Amount (>$10k) per 5min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "orange"
          },
          "custom": {
            "drawStyle": "bars",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 100,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            }
          },
          "unit": "short",
          "min": 0
        }
      },
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 7,
      "title": "ðŸš¨ Real-time Drift Detection",
      "type": "stat",
      "targets": [
        {
          "expr": "fraud_api_drift_score_current",
          "legendFormat": "Drift Score"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 0.15},
              {"color": "red", "value": 0.25}
            ]
          },
          "unit": "short",
          "min": 0,
          "max": 1
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 17}
    },
    {
      "id": 8,
      "title": "Drift Window Size",
      "type": "stat",
      "targets": [
        {
          "expr": "fraud_api_drift_window_size",
          "legendFormat": "Window Size"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "blue"
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 17}
    },
    {
      "id": 9,
      "title": "Drift Alerts",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(fraud_api_drift_alerts_total{severity=\"high\"}[5m]) * 300",
          "legendFormat": "High Severity Alerts"
        },
        {
          "expr": "rate(fraud_api_drift_alerts_total{severity=\"medium\"}[5m]) * 300", 
          "legendFormat": "Medium Severity Alerts"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "bars",
            "barAlignment": 0,
            "lineWidth": 1,
            "fillOpacity": 100,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "normal",
              "group": "A"
            }
          },
          "unit": "short",
          "min": 0
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "High Severity Alerts"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          }
        ]
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 17}
    },
    {
      "id": 10,
      "title": "Drift Score Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "fraud_api_drift_score_current",
          "legendFormat": "Real-time Drift Score"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "orange"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "none",
            "spanNulls": false,
            "insertNulls": false,
            "showPoints": "auto",
            "pointSize": 5,
            "stacking": {
              "mode": "none",
              "group": "A"
            },
            "axisPlacement": "auto",
            "axisLabel": "",
            "scaleDistribution": {
              "type": "linear"
            },
            "hideFrom": {
              "legend": false,
              "tooltip": false,
              "vis": false
            },
            "thresholdsStyle": {
              "mode": "line"
            }
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow", 
                "value": 0.15
              },
              {
                "color": "red",
                "value": 0.25
              }
            ]
          },
          "unit": "short",
          "min": 0,
          "max": 1
        }
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        }
      },
      "gridPos": {"h": 9, "w": 24, "x": 0, "y": 25}
    }
  ]
}